<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receptor de JSON Bluetooth</title>
</head>
<body>
    <h1>Receptor de JSON Bluetooth</h1>
    <div id="ipDisplay"></div>

    <script>
        async function connectToBluetooth() {
            try {
                // Solicitar permiso para acceder al dispositivo Bluetooth
                const device = await navigator.bluetooth.requestDevice({
                    acceptAllDevices: true, // Cambia esto por el filtro adecuado si conoces la identidad del dispositivo
                    optionalServices: ['generic_access'] // Cambia esto por los servicios Bluetooth que ofrece tu ESP32
                });

                // Conectar al dispositivo Bluetooth
                const server = await device.gatt.connect();

                // Obtener el servicio Bluetooth
                const service = await server.getPrimaryService('generic_access'); // Cambia esto por el servicio adecuado

                // Obtener la característica Bluetooth
                const characteristic = await service.getCharacteristic('generic_access'); // Cambia esto por la característica adecuada

                // Escuchar por cambios en la característica Bluetooth
                characteristic.addEventListener('characteristicvaluechanged', handleCharacteristicValueChanged);

                // Iniciar la notificación de cambios en la característica Bluetooth
                await characteristic.startNotifications();

            } catch (error) {
                console.error('Error de Bluetooth:', error);
            }
        }

        function handleCharacteristicValueChanged(event) {
            const value = event.target.value;
            const decoder = new TextDecoder('utf-8');
            const json = decoder.decode(value);
            // Mostrar el JSON recibido
            console.log("JSON recibido:", json);
            // Procesar el JSON (aquí podrías mostrarlo en la página)
            processData(JSON.parse(json));
        }

        function processData(data) {
            var ipDisplay = document.getElementById('ipDisplay');
            // Mostrar el número IP en el elemento HTML
            ipDisplay.innerHTML = "<p>Su número IP es: " + data.IP + "</p>";
        }

        // Llamar a la función para conectar al dispositivo Bluetooth cuando se carga la página
        window.onload = function() {
            connectToBluetooth();
        };
    </script>
</body>
</html>
